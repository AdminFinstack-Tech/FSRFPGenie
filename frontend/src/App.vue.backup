<script>
import OriginalLogo from './components/OriginalLogo.vue'

export default {
  name: 'App',
  components: {
    OriginalLogo
  },
  data() {
    return {
      drawer: false,
      isDark: false
    }
  },
  mounted() {
    this.checkHealth()
    // Load theme preference
    const savedTheme = localStorage.getItem('theme')
    if (savedTheme === 'dark') {
      this.isDark = true
      this.$vuetify.theme.global.name = 'dark'
    }
  },
  methods: {
    async checkHealth() {
      try {
        const response = await this.$store.dispatch('checkHealth')
        if (response.status === 'healthy') {
          console.log('System is healthy')
        }
      } catch (error) {
        this.$toast?.error('System health check failed')
        console.error(error)
      }
    },
    toggleTheme() {
      this.isDark = !this.isDark
      this.$vuetify.theme.global.name = this.isDark ? 'dark' : 'light'
      localStorage.setItem('theme', this.isDark ? 'dark' : 'light')
      this.$toast?.info(`${this.isDark ? 'Dark' : 'Light'} mode activated`)
    }
  }
}
</script>

